{
  "name": "@saeris/apollo-server-vercel",
  "description": "Production-ready Node.js GraphQL server for Vercel Serverless Functions",
  "version": "0.1.1",
  "keywords": [
    "GraphQL",
    "Apollo",
    "Server",
    "Now",
    "Javascript"
  ],
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/apollo-server-vercel.git"
  },
  "homepage": "https://github.com/saeris/apollo-server-vercel#readme",
  "bugs": {
    "url": "https://github.com/saeris/apollo-server-vercel/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "scripts": {
    "build": "pika build",
    "build:docs": "fiddly",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src/**/*.{js,ts}",
    "test": "yarn lint && yarn typecheck && jest -c ./jest.config.js",
    "test:watch": "jest -c ./jest.config.js --watch",
    "test:coverage": "jest -c ./jest.config.js && codecov",
    "release": "pika publish",
    "version": "npm run build"
  },
  "dependencies": {
    "@apollographql/graphql-playground-html": "1.6.24",
    "@vercel/node": "^1.6.1",
    "accept": "^3.1.3",
    "apollo-server-core": "^2.14.2",
    "apollo-server-env": "^2.4.4",
    "apollo-server-types": "^0.5.0",
    "graphql-tools": "^6.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@types/accept": "^3.1.1",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.10",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "codecov": "^3.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-promise": "^4.2.1",
    "fiddly": "^0.9.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "2.0.5",
    "typescript": "^3.9.3"
  },
  "peerDependencies": {
    "graphql": "^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0-rc.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "*.gql",
            "__TEST__/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
