{
  "name": "@saeris/apollo-server-vercel",
  "description": "Production-ready Node.js GraphQL server for Vercel Serverless Functions",
  "version": "0.4.0",
  "keywords": [
    "GraphQL",
    "Apollo",
    "Server",
    "Now",
    "Javascript"
  ],
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/apollo-server-vercel.git"
  },
  "homepage": "https://github.com/saeris/apollo-server-vercel#readme",
  "bugs": {
    "url": "https://github.com/saeris/apollo-server-vercel/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "ci": "yarn install --ignore-scripts --frozen-lockfile --silent --non-interactive",
    "build": "pika build",
    "build:docs": "fiddly",
    "lint": "yarn test:lint",
    "release": "pika publish",
    "start": "vercel dev",
    "test": "yarn test:lint && yarn test:typecheck && yarn test:unit",
    "test:coverage": "yarn test:unit && codecov",
    "test:lint": "eslint \"./src/**/*.{j,t}s?(x)\"",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "jest",
    "test:watch": "yarn test:unit --watch",
    "typecheck": "yarn test:typecheck",
    "version": "npm run build"
  },
  "dependencies": {
    "@apollographql/graphql-playground-html": "1.6.26",
    "@vercel/node": "^1.7.4",
    "accept": "^3.1.3",
    "apollo-server-core": "^2.16.1",
    "apollo-server-env": "^2.4.5",
    "apollo-server-types": "^0.5.1",
    "graphql-tools": "^6.0.18"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@types/accept": "^3.1.1",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.2",
    "@types/micro": "^7.3.3",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "apollo-fetch": "^0.7.0",
    "apollo-link-http": "^1.5.17",
    "apollo-link-persisted-queries": "^0.2.2",
    "apollo-server-plugin-response-cache": "^0.5.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.7.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-promise": "^4.2.1",
    "express": "^4.17.1",
    "fiddly": "^0.9.1",
    "graphql-subscriptions": "^1.1.0",
    "husky": "^4.2.5",
    "jest": "^27.3.1",
    "js-sha256": "^0.9.0",
    "lint-staged": "^11.2.6",
    "micro": "^9.3.4",
    "node-fetch": "^2.6.0",
    "prettier": "2.0.5",
    "supertest": "^4.0.2",
    "typescript": "^3.9.7",
    "vercel": "^19.2.0",
    "vercel-node-server": "^2.2.1"
  },
  "peerDependencies": {
    "graphql": "^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0-rc.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "*.gql",
            "__mocks__/**/*",
            "__test__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
